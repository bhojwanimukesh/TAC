@model IEnumerable<IComment>

<hr />
<!-- [Comments List] -->
<div class="comments">
    <h4>What others have to say</h4>
    @foreach (var comment in Model)
    {
        <div><strong>@comment.Name</strong> &mdash; @comment.Date.ToString("dd MMM yyyy")</div>
        <blockquote>@comment.Description</blockquote>
    }
</div>
<!-- [/Comments List] -->
<!-- [Comments Form] -->
<div>
    <form action="#">
        <div>
            <input type="text" class="form-control" placeholder="Name" name="email">
            <input type="text" class="form-control" placeholder="Add your comment here" name="comment">
        </div>
        <input type="submit" class="btn btn-default" value="Submit Comment">
    </form>
</div>
<!-- [/Comments Form] -->