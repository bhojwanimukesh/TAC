@using Glass.Mapper.Sc.Web.Mvc;
@using events.tac.local.events.tac.local.sitecore.templates.TAC.Events;

@model IEnumerable<IComment>

<hr />
<!-- [Comments List] -->
<div class="comments">
    <h4>What others have to say</h4>
    @foreach (var comment in Model)
    {
        @*@Html.Glass().Editable(comment, x => x.Name)*@
        <div><strong>@comment.Name</strong> &mdash; @comment.Date.ToString("dd MMM yyyy")</div>
        <blockquote>@comment.Description</blockquote>
    }
</div>
<!-- [/Comments List] -->
<!-- [Comments Form] -->
<div>
    <form action="#">
        <div>
            <input type="text" class="form-control" placeholder="Name" name="email">
            <input type="text" class="form-control" placeholder="Add your comment here" name="comment">
        </div>
        <input type="submit" class="btn btn-default" value="Submit Comment">
    </form>
</div>
<hr />
<div>
    <p>Related events retrieved through Glass Mapper</p>
    <ul>
        @foreach (var rEvent in ViewData["relatedEvents"] as IList<IEvent_Details>)
        {
            <li>@rEvent.ContentHeading</li>
        }
    </ul>
</div>
<!-- [/Comments Form] -->